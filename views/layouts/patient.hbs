<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/{{style}}" />
    <link rel="stylesheet" href="/css/allPatient.css" />
    <title>Diabetes@Home</title>
  </head>
  <body>
    <header>
      <div class="header-date">
        <div>{{headerText}}</div>
      </div>
      <div class="message">
        <div class="popup" onclick="myFunction()"><img src="/image/icon/patient-msg-logo-new.png"/>
          <span class="popuptext" id="myPopup">
            {{#if supportMsg}}
              {{supportMsg}}
            {{else}}
              No message from you clinician
            {{/if}}
            </span>
        </div>
      </div>
    </header>  
    <main>
      {{! main content}}
      {{{body}}}
      {{! navigation}}
      {{> navigation}}
    </main>
    <footer class="layout-footer">
      <div>Â© Diabetes@Home 2022 &nbsp;&nbsp;|&nbsp;&nbsp; P: 0123456789 &nbsp;&nbsp;|&nbsp;&nbsp; E: <a href="mailto:diabetes.home@gmail.com">diabetes.home@gmail.com</a></div>
    </footer>
    <script>
      // When the user clicks on div, open the popup
      function myFunction() {
        var popup = document.getElementById("myPopup");
        popup.classList.toggle("show");
      }
    </script>
  </body>
</html>

